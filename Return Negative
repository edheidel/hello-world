//Solution 1
function makeNegative(num) {
  let result;
  if (num > 0) {
    result = num * (-1);
  } else {
    return result = num;
  }
  return result;
}


//Solution 2
function makeNegative(num) {
  return (num > 0) ? (num * (-1)) : num;
}

//Solution 3
function makeNegative(num) {
  return (num > 0) ? num * -1 : num;
}

//Solution 4
function makeNegative(num) {
  return num > 0 ? -num : num;
}

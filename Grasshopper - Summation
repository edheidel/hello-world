//Solution 1 - while statement
function summation (num) {
  let result = 0
  let i = 0;
  while (i < num){
    i++;
    result += i;
  }
  return result;
}


//Solution 2 - for statement
function summation (num) {
  let result = 0;
  for (let i = 1; i <= num; i++) {
    result += i;
  }
  return result;
}
